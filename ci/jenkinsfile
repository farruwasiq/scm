pipeline{
    agent any
        
    
    stages{
        stage('Git checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/farruwasiq/scm.git'

            }
            
        }
        stage('teraform initalizing'){
            steps{
                sh 'terraform init'

            }
            
        }
        stage('plan'){
            steps{
                sh 'terraform plan'

            }
            
        }
        stage('delploy'){
            steps{
                sh 'terraform apply -y'

            }
            
        }
        
    }
    
}